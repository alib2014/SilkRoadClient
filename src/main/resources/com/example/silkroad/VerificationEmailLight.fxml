<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #003ad5;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.silkroad.VerificationEmailLightController">
    <children>
        <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Option">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#backMenu" text="Back to main menu" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#switchDark" text="Switch to Dark mode" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label alignment="CENTER" layoutX="-1.0" layoutY="30.0" prefHeight="70.0" prefWidth="600.0" text="Your SMS verification code has sent!" textFill="WHITE">
            <font>
                <Font name="Bauhaus 93" size="28.0" />
            </font>
        </Label>
        <TextField fx:id="verificationEmailTextField" layoutX="211.0" layoutY="187.0" promptText="verification" />
        <Button layoutX="261.0" layoutY="247.0" mnemonicParsing="false" onAction="#check" text="Check">
         <font>
            <Font name="Franklin Gothic Demi" size="12.0" />
         </font></Button>
        <Label layoutX="107.0" layoutY="336.0" text="Wrong number?" textFill="WHITE">
            <font>
                <Font name="System Bold" size="17.0" />
            </font>
        </Label>
        <Button layoutX="260.0" layoutY="337.0" mnemonicParsing="false" onAction="#edit" text="Edit">
         <font>
            <Font name="Franklin Gothic Demi" size="12.0" />
         </font></Button>
    </children>
</AnchorPane>
